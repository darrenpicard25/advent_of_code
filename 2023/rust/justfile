# Use `just work day-01 part1` to work on the specific binary for a specific day's problems

lint day:
    cargo clippy -p {{day}}

test day:
    cargo test -p {{day}}
bench-all:
    cargo bench -q > benchmarks.txt
bench day part:
    cargo bench --bench {{day}} {{part}} >> {{day}}.bench.txt
create day:
    cargo generate --path ./template --name {{day}}
